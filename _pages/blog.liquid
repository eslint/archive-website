permalink: blog/index.html
---

<br/>
<ul class="posts">
{% for post in collections.posts %}
  <li>
    <a href="{{ post.url | replace: '.html', '' }}">{{ post.data.title }}</a>
    <span class="date">{{ post.date | dateFormat: "d LLLL yyyy" }}</span>
    <span class="num-words"><em>{{ post.templateContent | numberOfWords }}</em> words</span>
  </li>
{% endfor %}
</ul>
